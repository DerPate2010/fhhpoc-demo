{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "originator": "%originator%",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "width": 1,
          "items": [
            {
              "type": "Container",
              "padding": {
                "top": "medium",
                "bottom": "None",
                "left": "medium",
                "right": "medium"
              },
              "items": [
                {
                  "type": "Image",
                  "url": "https://www.hamburg.de/image/3435822/16x9/990/557/c8a2eaecd1f4e052f1b8c6972a5a020d/fU/logo-fhh-2016-rgb.jpg",
                  "size": "Small"
                }
              ]
            },
            {
              "type": "Container",
              "padding": {
                "top": "none",
                "bottom": "medium",
                "left": "medium",
                "right": "medium"
              },
              "items": [
                {
                  "text": "Aktive Aufgabe: %taskTitle%",
                  "type": "TextBlock"
                },
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "Image",
                          "style": "Person",
                          "url": "https://openclipart.org/image/800px/247320",
                          "size": "Small"
                        }
                      ],
                      "padding": "None"
                    },
                    {
                      "type": "Column",
                      "width": "stretch",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "**%taskAssignedTo%** f√§llig am %taskDueDate%"
                        },
                        {
                          "type": "TextBlock",
                          "text": "%taskDescription%",
                          "spacing": "None",
                          "size": "Small"
                        }
                      ],
                      "padding": "None"
                    },
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "size": "Medium",
                          "weight": "Bolder"
                        }
                      ],
                      "padding": "None"
                    }
                  ],
                  "padding": "None"
                }
              ]
            }
          ],
          "type": "Column",
          "padding": "None"
        }
      ],
      "padding": "None"
    },
    {
      "type": "Container",
      "padding": "None",
      "items": [
        {
          "type": "Container",
          "padding": "medium",
          "items": [
            {
              "text": "Zugestimmt am %actionDate%",
              "type": "TextBlock",
              "spacing": "None"
            }
          ]
        }
      ],
      "style": "emphasis"
    }
  ],
  "padding": "None"
}